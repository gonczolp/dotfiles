! clean up urxvt, add keybinds
URxvt.scrollBar: false
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.cursorBlink: 1
URxvt.urgentOnBell: true

! font
URxvt.font: xft:UbuntuMono:size=12

! terminal padding
URxvt.internalBorder: 20

! make otf / ttf fonts look pretty.  does not matter if you are using a bitmap font.
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! clickable links, clipboard support, mouse wheel support, and on the fly font resizing
! you will need to install the relevent perl extensions for these to work
URxvt.url-launcher: google-chrome-stable
URxvt.matcher.button: 1
URxvt.perl-ext-common: default,matcher,vtwheel

! colors
! special
*.foreground:   #ffffff
*.background:   #1B212C
*.cursorColor:  #ffffff
URxvt.intensityStyles: false
URxvt*depth: 32
URxvt*background: rgba:1b00/2100/2c00/c800
! black
*.color0:       #bfbf6e
*.color8:       #c2a430
! red
*.color1:       #dc2566
*.color9:       #fa2772
! green
*.color2:       #739a21
*.color10:      #a7e22e
! yellow
*.color3:       #d4c96e
*.color11:      #e7db75
! blue
*.color4:       #55bcce
*.color12:      #66d9ee
! magenta
*.color5:       #9358fe
*.color13:      #ae82ff
! cyan
*.color6:       #56b7a5
*.color14:      #66efd5
! white
*.color7:       #aeaeaa
*.color15:      #d2d2d0


! define rofi settings
rofi.eh: 1
rofi.fullscreen: true
rofi.padding: 300
rofi.bw: 0
rofi.color-enabled: true
rofi.color-window: #DD2f343f, #f3f4f5, #f3f4f5
rofi.color-normal: #002f343f, #f3f4f5, #002f343f, #002f343f, #9575cd
rofi.color-active: #002f343f, #f3f4f5, #002f343f, #002f343f, #9575cd
rofi.color-urgent: #002f343f, #f3f4f5, #002f343f, #002f343f, #9575cd
rofi.separator-style: solid
rofi.hide-scrollbar: true
